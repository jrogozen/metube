<div class="main">
  <h2>Add Video</h2>
  <%= form_for @video do |f| %>

    <% if @video.errors.any? %>
      <ul>
        <% @video.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    title: <%= f.text_field :title %><br>
    youtube id: <%= f.text_field :url %><br>
    description: <%= f.text_area :description %>

    <%= f.submit %>

  <% end %>
</div>