<%= form_for @playlist do |f| %>

  <% if @playlist.errors.any? %>
    <ul>
      <% @playlist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  name: <%= f.text_field :name %><br>
  user: <%= f.select(:user_id, @user_options) %>
  <%= f.submit %>
<% end %>